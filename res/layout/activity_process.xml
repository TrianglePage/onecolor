<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75" >

            <ImageView
                android:id="@+id/ivTextTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="160dp"
                android:paddingTop="10dp"
                android:src="@drawable/text_title" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingBottom="1dp"
                android:paddingLeft="25dp"
                android:paddingRight="160dp"
                android:paddingTop="15dp"
                android:text="Guide" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.72"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:orientation="vertical" >

         <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:layout_weight="0.9">

        <!--   <ImageView
	            android:id="@+id/ivImgView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitCenter"
	            android:src="@drawable/img_view" /> -->
             
        <com.puzzleworld.onecolor.ScaleImageView
            android:id="@+id/ivProcess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="matrix"
            android:src="@drawable/meinv" />
        </FrameLayout>
        
         <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
            
          <ImageView
	            android:id="@+id/ivTextTitle1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="0dp"
	            android:paddingRight="200dp"
	            android:src="@drawable/text_title1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingTop="5dp"
	            android:text="Level[0~100]" />            
        </FrameLayout>
         
        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	    android:maxHeight="20dp"  
	    android:minHeight="20dp"  
	    android:paddingLeft="20dp"  
	    android:paddingRight="20dp"
            android:progressDrawable="@drawable/seekbar_define_style"
    	    android:thumb="@drawable/seekbar_thumb"
            android:layout_weight="0.05" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnRestore"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:src="@drawable/restore" />

        <ImageButton
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/confirm" />

        <ImageButton
            android:id="@+id/btnPickanother"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:src="@drawable/pickupanother" />

    </LinearLayout>

</LinearLayout>
